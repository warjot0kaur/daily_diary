# And then about basics programs

## Declare variables:
name="Alice"
echo "Hello, $name!"
## Command substitution:
now=$(date)
echo "Current time: $now"
## Read user input
read reply
## Conditionals:
if [ "$1" -gt 10 ]; then
  echo "Greater than 10"
elif [ "$1" -eq 10 ]; then
  echo "Equal to 10"
else
  echo "Less than 10"
fi
## Loops:
### for loop:
for i in {1..5}; do
  echo "Iteration: $i"
done
### while loop:
count=1
while [ $count -le 5 ]; do
  echo $count
  ((count++))
done

